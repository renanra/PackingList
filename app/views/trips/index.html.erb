<% content_for(:page_title) { "ALL TRIPS" } %>
<div class="jumbotron text-center">
  <h2 style="display:inline"> TOTAL TRIPS: </h2>
  <h2 style="display:inline" id="count-trips"></h2>
  <img style="display:inline float:right" id="trash" src="https://40.media.tumblr.com/91d06c61fccaaf1f441f26506262c6c3/tumblr_no6kleCLtL1rijzg7o1_400.jpg" width="150px" height="140px"/>
</div>
<div class="row">
  <% @trips.each do |trip| %>
    <div class="col-xs-18 col-sm-3 col-md-4 stack" id="tripLi" data-id="<%= trip.id %>">
      <br>
      <div class="thumbnail text-center">
        <%= google_maps_image_tag(trip.destination, class: "menu_icon") %>
        <h4> <%=link_to trip.destination, saved_items_trip_path(trip.id) %></h4>
        <h4>Start Date : <%=trip.start_date %></h4>
        <h4>End Date : <%=trip.end_date %></h4>
      </div>
      <!-- TODO: Remove ID -->
      <div id="count-trips" class="caption">
        <%= link_to edit_trip_path(trip) do %>
          <img style="float:left" src="https://cdn4.iconfinder.com/data/icons/meBaze-Freebies/512/edit-notes.png" width=" 60px" height="60px" />
        <% end %>
        <%= link_to trip_path(trip), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this trip?' } do %>
          <img style="float:right" src="http://cdn.mysitemyway.com/etc-mysitemyway/icons/legacy-previews/icons-256/firey-orange-jelly-icons-business/079927-firey-orange-jelly-icon-business-trashcan3.png" width=" 60px" height="60px"/>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
